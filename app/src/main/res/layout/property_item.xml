<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingTop="5dp"
    android:paddingEnd="10dp"
    android:paddingBottom="5dp">

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="@dimen/thumbnailsize"
        android:layout_height="@dimen/thumbnailsize"
        android:scaleType="centerCrop"
        android:transitionName="MyTransition" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/thumbnail"
        android:gravity="start"
        android:layoutDirection="locale"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <edu.newhaven.krikorherlopian.android.vproperty.textview.BoldTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@android:color/black"
            android:textDirection="locale"
            android:textSize="@dimen/normalTextSize"
            android:textStyle="bold" />

        <edu.newhaven.krikorherlopian.android.vproperty.textview.LightTextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/greyish"
            android:textDirection="locale"
            android:textSize="@dimen/normalTextSize"
            android:textStyle="normal" />
    </LinearLayout>
</RelativeLayout>