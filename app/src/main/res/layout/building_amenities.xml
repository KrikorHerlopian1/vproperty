<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <edu.newhaven.krikorherlopian.android.vproperty.checkbox.MyCustomCheckBox
            android:id="@+id/basketball_court"
            android:layout_width="0dp"
            android:layout_height="@dimen/checkboxsize"
            android:layout_weight="1"
            android:text="@string/basketball_court"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"></edu.newhaven.krikorherlopian.android.vproperty.checkbox.MyCustomCheckBox>

        <edu.newhaven.krikorherlopian.android.vproperty.checkbox.MyCustomCheckBox
            android:id="@+id/disabled_access"
            android:layout_width="0dp"
            android:layout_height="@dimen/checkboxsize"
            android:layout_weight="1"
            android:text="@string/disabled_access"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"></edu.newhaven.krikorherlopian.android.vproperty.checkbox.MyCustomCheckBox>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <edu.newhaven.krikorherlopian.android.vproperty.checkbox.MyCustomCheckBox
            android:id="@+id/doorman"
            android:layout_width="0dp"
            android:layout_height="@dimen/checkboxsize"
            android:layout_weight="1"
            android:text="@string/doorman"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"></edu.newhaven.krikorherlopian.android.vproperty.checkbox.MyCustomCheckBox>

        <edu.newhaven.krikorherlopian.android.vproperty.checkbox.MyCustomCheckBox
            android:id="@+id/elevator"
            android:layout_width="0dp"
            android:layout_height="@dimen/checkboxsize"
            android:layout_weight="1"
            android:text="@string/elevator"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"></edu.newhaven.krikorherlopian.android.vproperty.checkbox.MyCustomCheckBox>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <edu.newhaven.krikorherlopian.android.vproperty.checkbox.MyCustomCheckBox
            android:id="@+id/fitness_center"
            android:layout_width="0dp"
            android:layout_height="@dimen/checkboxsize"
            android:layout_weight="1"
            android:text="@string/fitness_center"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"></edu.newhaven.krikorherlopian.android.vproperty.checkbox.MyCustomCheckBox>

        <edu.newhaven.krikorherlopian.android.vproperty.checkbox.MyCustomCheckBox
            android:id="@+id/sports_court"
            android:layout_width="0dp"
            android:layout_height="@dimen/checkboxsize"
            android:layout_weight="1"
            android:text="@string/sports_court"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"></edu.newhaven.krikorherlopian.android.vproperty.checkbox.MyCustomCheckBox>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <edu.newhaven.krikorherlopian.android.vproperty.checkbox.MyCustomCheckBox
            android:id="@+id/storage"
            android:layout_width="0dp"
            android:layout_height="@dimen/checkboxsize"
            android:layout_weight="1"
            android:text="@string/storage"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"></edu.newhaven.krikorherlopian.android.vproperty.checkbox.MyCustomCheckBox>

        <edu.newhaven.krikorherlopian.android.vproperty.checkbox.MyCustomCheckBox
            android:id="@+id/tennis_court"
            android:layout_width="0dp"
            android:layout_height="@dimen/checkboxsize"
            android:layout_weight="1"
            android:text="@string/tennis_court"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"></edu.newhaven.krikorherlopian.android.vproperty.checkbox.MyCustomCheckBox>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <edu.newhaven.krikorherlopian.android.vproperty.checkbox.MyCustomCheckBox
            android:id="@+id/near_transportation"
            android:layout_width="0dp"
            android:layout_height="@dimen/checkboxsize"
            android:layout_weight="1"
            android:text="@string/near_transportation"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"></edu.newhaven.krikorherlopian.android.vproperty.checkbox.MyCustomCheckBox>
    </LinearLayout>
</LinearLayout>