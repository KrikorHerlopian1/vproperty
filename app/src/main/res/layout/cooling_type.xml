<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <edu.newhaven.krikorherlopian.android.vproperty.checkbox.MyCustomCheckBox
            android:id="@+id/central"
            android:layout_width="0dp"
            android:layout_height="@dimen/checkboxsize"
            android:layout_weight="1"
            android:text="@string/central"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"></edu.newhaven.krikorherlopian.android.vproperty.checkbox.MyCustomCheckBox>

        <edu.newhaven.krikorherlopian.android.vproperty.checkbox.MyCustomCheckBox
            android:id="@+id/evaporative"
            android:layout_width="0dp"
            android:layout_height="@dimen/checkboxsize"
            android:layout_weight="1"
            android:text="@string/evaporative"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"></edu.newhaven.krikorherlopian.android.vproperty.checkbox.MyCustomCheckBox>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <edu.newhaven.krikorherlopian.android.vproperty.checkbox.MyCustomCheckBox
            android:id="@+id/geothermal_cooling"
            android:layout_width="0dp"
            android:layout_height="@dimen/checkboxsize"
            android:layout_weight="1"
            android:text="@string/geothermal"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"></edu.newhaven.krikorherlopian.android.vproperty.checkbox.MyCustomCheckBox>

        <edu.newhaven.krikorherlopian.android.vproperty.checkbox.MyCustomCheckBox
            android:id="@+id/refrigeration"
            android:layout_width="0dp"
            android:layout_height="@dimen/checkboxsize"
            android:layout_weight="1"
            android:text="@string/refrigeration"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"></edu.newhaven.krikorherlopian.android.vproperty.checkbox.MyCustomCheckBox>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <edu.newhaven.krikorherlopian.android.vproperty.checkbox.MyCustomCheckBox
            android:id="@+id/solar"
            android:layout_width="0dp"
            android:layout_height="@dimen/checkboxsize"
            android:layout_weight="1"
            android:text="@string/solar"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"></edu.newhaven.krikorherlopian.android.vproperty.checkbox.MyCustomCheckBox>

        <edu.newhaven.krikorherlopian.android.vproperty.checkbox.MyCustomCheckBox
            android:id="@+id/wall_cooling"
            android:layout_width="0dp"
            android:layout_height="@dimen/checkboxsize"
            android:layout_weight="1"
            android:text="@string/wall"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"></edu.newhaven.krikorherlopian.android.vproperty.checkbox.MyCustomCheckBox>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <edu.newhaven.krikorherlopian.android.vproperty.checkbox.MyCustomCheckBox
            android:id="@+id/other_cooling"
            android:layout_width="0dp"
            android:layout_height="@dimen/checkboxsize"
            android:layout_weight="1"
            android:text="@string/other"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"></edu.newhaven.krikorherlopian.android.vproperty.checkbox.MyCustomCheckBox>

        <edu.newhaven.krikorherlopian.android.vproperty.checkbox.MyCustomCheckBox
            android:id="@+id/none"
            android:layout_width="0dp"
            android:layout_height="@dimen/checkboxsize"
            android:layout_weight="1"
            android:text="@string/none"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"></edu.newhaven.krikorherlopian.android.vproperty.checkbox.MyCustomCheckBox>
    </LinearLayout>

</LinearLayout>